@model EditHostFileModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = Localizer["Edit host file"];
}
<form asp-controller="Commands" asp-action="EditHostFile" method="post" class="Form-action">
    <h2>@Localizer["Append line to host file"]</h2>
    <hr />
    <div class="form-group">
        <label asp-for="Line"></label>
        <input asp-for="Line" />
        <span asp-validation-for="Line"></span>
    </div>
    <div class="ondisplay">
        <section title="@Localizer["Force execute command"]?">
            <div class="form-check slideTwo">
                <span asp-validation-for="Force"></span>
                <input asp-for="Force" class="form-check-input" type="checkbox" id="Force">
                <label class="form-check-label" for="Force"></label>
            </div>
        </section>
    </div>
    <button class="btn btn-primary mt-2 w-100">@Localizer["Submit"]</button>
</form>
