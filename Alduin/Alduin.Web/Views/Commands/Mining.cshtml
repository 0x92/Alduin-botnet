@model MiningModel
@{
    ViewData["Title"] = Localizer["Crypto Mining"];
}
<div class="container d-flex justify-content-center">
    <div class="wide-board">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-center">@Localizer["Config Monero Miner (Xmrig)"]</h1>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center">
                <form asp-controller="Commands" class="lg-auth-form" asp-action="ConfigMonero" method="post">
                    <div class="form-group">
                        <label asp-for="Link"></label>
                        <input asp-for="Link" />
                        <span asp-validation-for="Link"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Config"></label>
                        <textarea asp-for="Config"></textarea>
                        <span asp-validation-for="Config"></span>
                    </div>
                    <button class="btn btn-primary mt-2 w-100">@Localizer["Save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
