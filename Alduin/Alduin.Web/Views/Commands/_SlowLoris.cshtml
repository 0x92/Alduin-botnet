@model SlowLorisModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = Localizer["Arme Attack"];
}
<form asp-controller="Commands" asp-action="ExecuteSlowloris" method="post" class="Form-action">
    <h2>SlowLoris @Localizer["Attack"]</h2>
    <hr />
    <div class="form-group">
        <label asp-for="Host"></label>
        <input asp-for="Host" />
        <span asp-validation-for="Host"></span>
    </div>
    <div class="form-group">
        <label asp-for="Port"></label>
        <input asp-for="Port" />
        <span asp-validation-for="Port"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" />
        <span asp-validation-for="Time">(Sec)</span>
    </div>
    <div class="form-group">
        <label asp-for="PostDATA"></label>
        <input asp-for="PostDATA" />
        <span asp-validation-for="PostDATA"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThreadstoUse"></label>
        <input asp-for="ThreadstoUse" />
        <span asp-validation-for="ThreadstoUse"></span>
    </div>
    <div class="ondisplay">
        <section title="@Localizer["Random file"]?">
            <div class="form-check slideTwo">
                <span asp-validation-for="RandomFile"></span>
                <input asp-for="RandomFile" class="form-check-input" type="checkbox" id="Run">
                <label class="form-check-label" for="Run"></label>
            </div>
        </section>
    </div>
    <div class="ondisplay">
        <section title="@Localizer["Force execute command"]?">
            <div class="form-check slideTwo">
                <span asp-validation-for="Force"></span>
                <input asp-for="Force" class="form-check-input" type="checkbox" id="Force">
                <label class="form-check-label" for="Force"></label>
            </div>
        </section>
    </div>
    <button class="btn btn-primary mt-2 w-100">@Localizer["Submit"]</button>
</form>
